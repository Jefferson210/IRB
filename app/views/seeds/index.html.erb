<h1 class="alert alert-success text-center">Seeds</h1>

<div class="text-center">
    <h3><%= link_to 'New Seed', new_seed_path %></h3>
</div>
<p id="notice"><%= notice %></p>


<table class="table table-hover" id="codeCrossId">
    <thead>
        <tr>
            <th>Codecross</th>
            <th>Sowdate</th>
            <th>Origin</th>
            <th>Numseeds</th>
            <th>Totalweight</th>
            <th>Week</th>
            <th>Hydratation</th>
            <th>Status</th>
            <th>Dateout</th>
            <th>Germination</th>
            <th>totalCode</th>
            <th>totalNum</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @seeds.each do |seed| %>
        <tr>
            <td id="codeCrossName"><%= seed.crossing.codeCross%>-<%= seed.crossing.numRepeat %></td>
            <td><%= seed.sowDate %></td>
            <td><%= seed.origin %></td>
            <td><%= seed.numSeeds %></td>
            <td><%= seed.totalWeight %></td>
            <td><%= seed.week %></td>
            <td><%= seed.hydratation %></td>
            <td><%= seed.status %></td>
            <td><%= seed.dateOut %></td>
            <td><%= seed.germination %></td>
            <td><%= seed.totalCode %></td>
            <td><%= seed.totalNumRepeat %></td>
            <td><%= link_to 'Show', seed %></td>
            <td><%= link_to 'Edit', edit_seed_path(seed) %></td>
            <td><%= link_to 'Destroy', seed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<!--
<h4>suma by CodeCrossNumRepeat = < sumaCodeCrossNumRepeat %></h4>
<h4>suma by Code = < sumaCode %></h4>
-->

<h2 class="alert alert-info">Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>CodeCross</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        <% sumaCode.each do |item| %>
        <tr>
            <td><%= item[0] %></td>
            <td><%= item[1] %></td>
        </tr>
        <% end %>
    </tbody>


</table>

<table class="table">
    <thead>
        <tr>
            <th>CodeCrossNumRepeat</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        <% sumaCodeCrossNumRepeat.each do |item| %>
        <tr>
            <td><%= item[0] %></td>
            <td><%= item[1] %></td>
        </tr>
        <% end %>
    </tbody>
</table>
