<h1 class="alert alert-success text-center">One Offsprings</h1>

<div class="text-center">
    <h3><%= link_to 'New One offspring', new_one_offspring_path %></h3>
</div>

<p id="notice"><%= notice %></p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Codecross-numRepeat</th>
            <th>Father.Img</th>
            <th>Mother.Img</th>
            <th>Image</th>
            <th>N.Individual</th>
            <th>Color</th>
            <th>Status</th>
            <th>Headsize</th>
            <th>Flowering</th>
            <th>Numpetals</th>
            <th>Form</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @one_offsprings.each do |one_offspring| %>
        <tr>
            <td><%= one_offspring.germination.seed.crossing.codeCross %>-<%=one_offspring.germination.seed.crossing.numRepeat%></td>
            <td>
                <% @picturesParents.each do |picture| %>
                <% if one_offspring.germination.seed.crossing.father_id == picture.genetic_bank_id %>
                <div class="image-rose-index">
                    <%= image_tag picture.picture.url(), :class=>"img-thumbnail" %>
                </div>
                <%end%>
                <%end%>
            </td>

            <td>
                <% @picturesParents.each do |picture| %>
                <% if one_offspring.germination.seed.crossing.mother_id == picture.genetic_bank_id %>
                <div class="image-rose-index">
                    <%= image_tag picture.picture.url(), :class=>"img-thumbnail" %>
                </div>
                <%end%>
                <%end%>
            </td>

            <td>
                <% @pictures.each do |picture| %>
                <% if one_offspring.id == picture.one_offspring_id %>
                <div class="image-rose-index">
                    <%= image_tag picture.picture.url(), :class=>"img-thumbnail" %>
                </div>
                <%end%>
                <%end%>
            </td>            

            <td><%= one_offspring.individual %></td>
            <td><%= one_offspring.color ? one_offspring.color.colorName : 'N/A' %></td>
            <td><%= one_offspring.status %></td>
            <td><%= one_offspring.headSize %></td>
            <td><%= one_offspring.flowering %></td>
            <td><%= one_offspring.numPetals %></td>
            <td><%= one_offspring.form %></td>
            <td><%= link_to 'Show', one_offspring %></td>
            <td><%= link_to 'Edit', edit_one_offspring_path(one_offspring) %></td>
            <td><%= link_to 'Destroy', one_offspring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

