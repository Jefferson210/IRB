<p id="notice"><%= notice %></p>

<h1>Listing IRB Selections</h1>

<table>
    <thead>
        <tr>
            <th>Codecross</th>
            <th>Code</th>
            <th>Location</th>
            <th>Trademark</th>
            <th>Denomination</th>
            <th>Year</th>
            <th>Status</th>
            <th>Numplants</th>
            <th>Color</th>
            <th>Scent</th>
            <th>Headsize</th>
            <th>Numpetals</th>
            <th>Steamlenght</th>
            <th>Production</th>
            <th>Opening</th>
            <th>Abnormality</th>
            <th>Remarks</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @irb_selections.each do |irb_selection| %>
        <tr>
            <td><%= irb_selection.codeCross %></td>
            <td><%= irb_selection.code %></td>
            <td><%= irb_selection.location %></td>
            <td><%= irb_selection.trademark %></td>
            <td><%= irb_selection.denomination %></td>
            <td><%= irb_selection.year %></td>
            <td><%= irb_selection.status %></td>
            <td><%= irb_selection.numPlants %></td>
            <td><%= irb_selection.color ? irb_selection.color.colorName : 'N/A' %></td>
            <td><%= irb_selection.scent %></td>
            <td><%= irb_selection.headSize %></td>
            <td><%= irb_selection.numPetals %></td>
            <td><%= irb_selection.steamLenght %></td>
            <td><%= irb_selection.production %></td>
            <td><%= irb_selection.opening %></td>
            <td><%= irb_selection.abnormality %></td>
            <td><%= irb_selection.remarks %></td>
            <td><%= link_to 'Show', irb_selection %></td>
            <td><%= link_to 'Edit', edit_irb_selection_path(irb_selection) %></td>
            <td><%= link_to 'Destroy', irb_selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

