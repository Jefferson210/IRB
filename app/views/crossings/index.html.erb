<h1 class="alert alert-success text-center">Crossings</h1>

<div class="text-center">
    <h3><%= link_to 'New Crossing', new_crossing_path %></h3>
</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Crosscode</th>
            <th>Num.Rep</th>
            <th>Year</th>
            <th>Status</th>
            <th>Father</th>
            <th>FatherPict.</th>
            <th>Mother</th>
            <th>MotherPict.</th>
            <th>Crossweek</th>
            <th>Effective</th>
            <th>Num.Cross</th>
            <th>Good.Cross</th>
            <th>Bad.Cross</th>           
            <th>%Effective</th>
            <th>Dateharvest</th>
            <th>Weekharvest</th>
            <th>Num.Seeds</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @crossings.each do |crossing| %>
        <tr>
            <td><%= crossing.codeCross%></td>
            <td><%= crossing.numRepeat %></td>
            <td><%= crossing.year %></td>
            <td><%= crossing.status %></td>
            <td><%= crossing.father.code %></td>
            <td> 
                <% @pictures.each do |picture| %>
                <% if crossing.father_id  == picture.genetic_bank_id %>
                <div class="image-rose">
                    <%= image_tag picture.picture.url(), :class=>"img-thumbnail" %>
                </div>
                <%end%>
                <%end%>
            </td>
            <td><%= crossing.mother.code %></td>
            <td> 
                <% @pictures.each do |picture| %>
                <% if crossing.mother_id  == picture.genetic_bank_id %>
                <div class="image-rose">
                    <%= image_tag picture.picture.url(), :class=>"img-thumbnail" %>
                </div>
                <%end%>
                <%end%>
            </td>
            <td><%= crossing.crossWeek %></td>
            <td><%= crossing.effective %></td>
            <td><%= crossing.numCrossings %></td>
            <td><%= crossing.goodCrossings %></td>
            <td><%= crossing.badCrossings %></td>
            <td><%= crossing.percentageEffective %></td>
            <td><%= crossing.dateHarvest %></td>
            <td><%= crossing.weekHarvest %></td>
            <td><%= crossing.numSeeds %></td>
            <td><%= link_to 'Show', crossing %></td>
            <td><%= link_to 'Edit', edit_crossing_path(crossing) %></td>
            <td><%= link_to 'Destroy', crossing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>


