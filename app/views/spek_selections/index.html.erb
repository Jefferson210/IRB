<h1 class="alert alert-success text-center">Spek Selections</h1>

<div class="text-center">
    <h3><%= link_to 'New Spek selection', new_spek_selection_path %></h3>
</div>
<p id="notice"><%= notice %></p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Code</th>
            <th>Location</th>
            <th>Trademark</th>
            <th>Denomination</th>
            <th>Year</th>
            <th>Status</th>
            <th>Numplants</th>
            <th>Color</th>
            <th>Scent</th>
            <th>Headsize</th>
            <th>Numpetals</th>
            <th>Steamlenght</th>
            <th>Production</th>
            <th>Opening</th>
            <th>Abnormality</th>
            <th>Remarks</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @spek_selections.each do |spek_selection| %>
        <tr>
            <td><%= spek_selection.code %></td>
            <td><%= spek_selection.location %></td>
            <td><%= spek_selection.trademark %></td>
            <td><%= spek_selection.denomination %></td>
            <td><%= spek_selection.year %></td>
            <td><%= spek_selection.status %></td>
            <td><%= spek_selection.numPlants %></td>
            <td><%= spek_selection.color ? spek_selection.color.colorName : 'N/A' %></td>
            <td><%= spek_selection.scent %></td>
            <td><%= spek_selection.headSize %></td>
            <td><%= spek_selection.numPetals %></td>
            <td><%= spek_selection.steamLenght %></td>
            <td><%= spek_selection.production %></td>
            <td><%= spek_selection.opening %></td>
            <td><%= spek_selection.abnormality %></td>
            <td><%= spek_selection.remarks %></td>
            <td><%= link_to 'Show', spek_selection %></td>
            <td><%= link_to 'Edit', edit_spek_selection_path(spek_selection) %></td>
            <td><%= link_to 'Destroy', spek_selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>


